---
import BaseHead from "@/components/BaseHead.astro"
import Header from "@/components/Header.astro"
import Footer from "@/components/Footer.astro"

interface Props {
    title: string
    description: string
}

const { title, description } = Astro.props
---

<html lang="en">
	<head>
		<BaseHead title={ title || "Tech Industry Night" } description={ description || "Tech Industry Night 2026" } />
	</head>
	<body class="min-h-screen flex flex-col scroll-smooth">
        <Header />
        <main class="pt-12">
            <slot />
        </main>
        <Footer />

        <script>
            import AOS from 'aos'
            import 'aos/dist/aos.css'

            AOS.init({ once: true })
        </script>
	</body>
</html>
